<div class="jumbotron">
  <h2>Welcome to Yelpdemo!</h2>
  <h4>The best place to find fake reviews for local businesses</h4>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-3">Address</th>
      <th class="col-md-2">Phone</th>
      <th class="col-md-2">Website</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td>
          <h4><%= business.name %></h4>
        </td>
        <td>
          <%= business.address %><br>
          <%= business.citystatezip %>
        </td>
        <td><%= business.phone %></td>
        <td><%= link_to business.website, business.website %></td>
        <td>
          <%= link_to "Write Review", new_business_review_path(business), class: "btn btn-success" %>
        </td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Show", business, class: "btn btn-link" %></li>
              <li><%= link_to "Edit", edit_business_path(business), class: "btn btn-link" %></li>
              <li><%= link_to 'Destroy', business, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
